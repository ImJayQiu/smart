<h3><%= t('Users_management') %> - <%= t('Show_record') %></h3>

<p id="notice"><%= notice %></p>

<% if can? :show, @user %>

	<section class="content">
	<div class="row">
		<!-- left column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">
						<%= image_tag @user.avatar.url(:thumb) %>
						<%= t('personal_info')%>
					</h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<!--form role="form" -->
				<div class="box-body">

				
					<div class="form-group">
						<%= t('Name') %>: 
						<%= @user.fname %>
					</div>

                              		<div class="form-group">
						<%= t('department') %>: 
						<%= @user.department rescue nil %>
					</div>

					<div class="form-group">
						<%= t('Code') %>: 
						<%= @user.code rescue nil %>
					</div>


					<div class="form-group">
						<%= t('research') %>:
						<%= @user.research rescue nil %>
					</div>

					<div class="form-group">
						<%= t('Role') %>:
						<%= @user.role rescue nil %>
					</div>


				</div>
				<!-- /form -->
			</div>
		</div>

		<!-- right column -->
		<div class="col-md-6">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('contact_info')%></h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<!-- form role="form" -->
				<div class="box-body">

					<div class="form-group">
						<%= t('Country') %>:
						<%= @user.country rescue nil %>
					</div>
					<div class="form-group">
						<%= t('Province') %>:
						<%= @user.province rescue nil %>
					</div>
					<div class="form-group">
						<%= t('City') %>:
						<%= @user.city rescue nil %>
					</div>
					<div class="form-group">
						<%= t('Address') %>:
						<%= @user.address rescue nil %>
					</div>
					<div class="form-group">
						<%= t('Phone') %>:
						<%= @user.phone rescue nil %>
					</div>
					<div class="form-group">
						<%= t('Email') %>:
						<%= @user.email rescue nil %>
					</div>

				</div>
				<!-- /form -->
			</div>
		</div>


		<!-- personal des  column -->
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('personal_des')%></h3>
				</div>
				<!-- /.box-header -->
				<div class="box-body">
					<div class="form-group">
						<%= @user.des %>
					</div>
				</div>
			</div>
		</div>



		<!-- final column -->
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title"><%= t('Operations')%></h3>
				</div>
				<!-- /.box-header -->
				<div class="box-body">
					<div class="form-group">
						<table class="table text-center">
							<tbody>
							<tr>
								<td>
									<%= button_to t('Edit'), edit_user_path(@user), method: "get" %>
								</td>

								<% if can? :list, :staffs %>
									<td>
									<%= button_to t('staffs_management'), staffs_users_path, method: "get" %>
								</td>
								<% end # if can? :list, :staffs %>

							

								<td>
									<%= button_to t('back_landing'), root_path, method: "get" %>
								</td>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>

</div><!-- end class row -->
</section>

<% else %>

<%= t('permission_denied') %>

	<% end # if can? :view, user %>


